{
    "manifest_version": 2,
    "name": "Auto Anki Cards",
    "description": "Automates the process of making Anki cards, and generates a CSV to import",
    "version": "0.0.1",
    "icons": {
      "64": "icons/AutoAnkiCardsExt.png"
    },
    "permissions": ["tabs", "contextMenus", "clipboardWrite"],
    "background": {
      "scripts": ["background_script.js"]
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "AutoCards@MePls.rn"
      }
    },
    "content_scripts": [],
    "browser_action": {
      "default_icon": {
        "64": "icons/twitch.png"
      }
    }
  }